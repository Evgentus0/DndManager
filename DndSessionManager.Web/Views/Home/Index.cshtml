@{
    ViewData["Title"] = "Home";
}

<div id="home-app" class="text-center mt-5">
    <h1 class="display-3 mb-4">{{ $t('nav.brand') }}</h1>
    <p class="lead mb-5">{{ $t('home.tagline') }}</p>

    <div class="row justify-content-center">
        <div class="col-12 col-md-5 mb-4 mb-md-0">
            <div class="card shadow-lg h-100">
                <div class="card-body d-flex flex-column justify-content-center p-5">
                    <h2 class="card-title mb-4">{{ $t('home.host.title') }}</h2>
                    <p class="card-text mb-4">{{ $t('home.host.description') }}</p>
                    <a asp-controller="Session" asp-action="Create" class="btn btn-primary btn-lg">{{ $t('home.host.button') }}</a>
                </div>
            </div>
        </div>

        <div class="col-12 col-md-5">
            <div class="card shadow-lg h-100">
                <div class="card-body d-flex flex-column justify-content-center p-5">
                    <h2 class="card-title mb-4">{{ $t('home.join.title') }}</h2>
                    <p class="card-text mb-4">{{ $t('home.join.description') }}</p>
                    <a asp-controller="Session" asp-action="Browse" class="btn btn-success btn-lg">{{ $t('home.join.button') }}</a>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-5">
        <p class="text-muted">
            <strong>@ViewBag.ActiveSessionCount</strong> {{ $t('home.activeSessions') }}
        </p>
    </div>
</div>

@section Scripts {
	<script type="module">
		import { createApp } from 'vue'
		import { i18n } from './ClientApp/i18n.js'

		const app = createApp({})
		app.use(i18n)
		app.mount('#home-app')
	</script>
}
