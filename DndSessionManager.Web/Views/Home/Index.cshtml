@{
    ViewData["Title"] = "Home";
}

<div class="text-center mt-5">
    <h1 class="display-3 mb-4">D&D Session Manager</h1>
    <p class="lead mb-5">Manage your Dungeons & Dragons sessions with ease</p>

    <div class="row justify-content-center">
        <div class="col-12 col-md-5 mb-4 mb-md-0">
            <div class="card shadow-lg h-100">
                <div class="card-body d-flex flex-column justify-content-center p-5">
                    <h2 class="card-title mb-4">Host a Session</h2>
                    <p class="card-text mb-4">Create a new D&D session and invite players to join</p>
                    <a asp-controller="Session" asp-action="Create" class="btn btn-primary btn-lg">Host Session</a>
                </div>
            </div>
        </div>

        <div class="col-12 col-md-5">
            <div class="card shadow-lg h-100">
                <div class="card-body d-flex flex-column justify-content-center p-5">
                    <h2 class="card-title mb-4">Join a Session</h2>
                    <p class="card-text mb-4">Browse and join existing D&D sessions</p>
                    <a asp-controller="Session" asp-action="Browse" class="btn btn-success btn-lg">Join Session</a>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-5">
        <p class="text-muted">
            <strong>@ViewBag.ActiveSessionCount</strong> active session(s) available
        </p>
    </div>
</div>
