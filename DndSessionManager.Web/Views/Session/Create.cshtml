@{
    ViewData["Title"] = "Create Session";
}

<div id="create-app" class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h2 class="mb-0">{{ $t('create.title') }}</h2>
            </div>
            <div class="card-body">
                <form asp-controller="Session" asp-action="Create" method="post">
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label for="sessionName" class="form-label">{{ $t('create.fields.sessionName.label') }} <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="sessionName" name="sessionName" required maxlength="100" :placeholder="$t('create.fields.sessionName.placeholder')">
                    </div>

                    <div class="mb-3">
                        <label for="joinPassword" class="form-label">{{ $t('create.fields.joinPassword.label') }} <span class="text-danger">*</span></label>
                        <input type="password" class="form-control" id="joinPassword" name="joinPassword" required minlength="4" :placeholder="$t('create.fields.joinPassword.placeholder')">
                        <div class="form-text">{{ $t('create.fields.joinPassword.help') }}</div>
                    </div>

                    <div class="mb-3">
                        <label for="masterPassword" class="form-label">{{ $t('create.fields.masterPassword.label') }} <span class="text-danger">*</span></label>
                        <input type="password" class="form-control" id="masterPassword" name="masterPassword" required minlength="4" :placeholder="$t('create.fields.masterPassword.placeholder')">
                        <div class="form-text">{{ $t('create.fields.masterPassword.help') }}</div>
                    </div>

                    <div class="mb-3">
                        <label for="maxPlayers" class="form-label">{{ $t('create.fields.maxPlayers.label') }}</label>
                        <input type="number" class="form-control" id="maxPlayers" name="maxPlayers" value="6" min="2" max="20">
                        <div class="form-text">{{ $t('create.fields.maxPlayers.help') }}</div>
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-label">{{ $t('create.fields.description.label') }}</label>
                        <textarea class="form-control" id="description" name="description" rows="3" maxlength="500" :placeholder="$t('create.fields.description.placeholder')"></textarea>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">{{ $t('create.buttons.create') }}</button>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">{{ $t('create.buttons.cancel') }}</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
	<script type="module">
		import { createApp } from 'vue'
		import { i18n } from '/ClientApp/i18n.js'

		const app = createApp({})
		app.use(i18n)
		app.mount('#create-app')
	</script>
}
